{
  "hosting": {
    "public": "dist",
    "trailingSlash": false,
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "colors{,/**}",
        "destination": "/colors/index.html"
      },
      {
        "source": "ip-calculator{,/**}",
        "destination": "/ip-calculator/index.html"
      },
      {
        "source": "statsviz{,/**}",
        "destination": "/statsviz/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
